/* Global Time Converter â€” Stunning theme & animations */
@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap');

*,
*::before,
*::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --bg: #0a0a0f;
    --bg-card: rgba(15, 15, 22, 0.9);
    --bg-card-border: rgba(255, 255, 255, 0.08);
    --text: #f8f8fc;
    --text-muted: #9898b0;
    --accent: #00e5b0;
    --accent-dim: rgba(0, 229, 176, 0.25);
    --accent-glow: rgba(0, 229, 176, 0.4);
    --purple: #b366ff;
    --purple-dim: rgba(179, 102, 255, 0.25);
    --pink: #ff6b9d;
    --orange: #ff9f43;
    --radius: 24px;
    --radius-sm: 14px;
    --shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
    --transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.hidden {
    display: none !important;
}

html {
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
}

body {
    font-family: 'Outfit', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--bg);
    color: var(--text);
    min-height: 100vh;
    line-height: 1.5;
    overflow-x: hidden;
}

.bg-gradient {
    position: fixed;
    inset: 0;
    z-index: -1;
    background:
        linear-gradient(135deg, #0a0a0f 0%, #12121a 50%, #0d0d14 100%),
        radial-gradient(ellipse 100% 80% at 30% -10%, var(--accent-dim) 0%, transparent 50%),
        radial-gradient(ellipse 80% 60% at 90% 20%, var(--purple-dim) 0%, transparent 45%),
        radial-gradient(ellipse 60% 50% at 10% 80%, rgba(255, 107, 157, 0.08) 0%, transparent 50%);
    pointer-events: none;
    animation: bgPulse 15s ease-in-out infinite alternate;
}

@keyframes bgPulse {
    0% { opacity: 1; }
    100% { opacity: 0.95; }
}

/* App loading screen (startup) */
.app-loading {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.4s ease, visibility 0.4s ease;
}

.app-loading[aria-hidden="true"] {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

.app-loading-content {
    text-align: center;
}

.app-loading-spinner {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    border: 3px solid var(--bg-card-border);
    border-top-color: var(--accent);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.app-loading-text {
    font-size: 1rem;
    color: var(--text-muted);
    font-weight: 500;
}

/* Calendar loading (when fetching holidays) */
.calendar-wrap {
    position: relative;
    min-height: 200px;
}

.calendar-loading {
    position: absolute;
    inset: 0;
    z-index: 10;
    background: rgba(13, 13, 18, 0.85);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    color: var(--text-muted);
    font-size: 0.95rem;
    transition: opacity 0.3s ease, visibility 0.3s ease;
}

.calendar-loading[aria-hidden="true"] {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

.calendar-loading-spinner {
    width: 28px;
    height: 28px;
    border: 2px solid var(--bg-card-border);
    border-top-color: var(--accent);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.container {
    max-width: 960px;
    margin: 0 auto;
    padding: clamp(16px, 4vw, 32px);
}

/* Header */
.header {
    text-align: center;
    padding: clamp(24px, 5vw, 48px) 0 clamp(20px, 4vw, 32px);
    animation: fadeDown 0.6s ease-out;
}

@keyframes fadeDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.header-title {
    font-size: clamp(2rem, 6vw, 3.2rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, var(--accent) 0%, var(--purple) 50%, var(--pink) 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
    animation: gradientShift 8s ease infinite;
}

@keyframes gradientShift {
    0%, 100% { background-position: 0% center; }
    50% { background-position: 100% center; }
}

.header-subtitle {
    font-size: clamp(0.9rem, 2.2vw, 1.1rem);
    color: var(--text-muted);
    font-weight: 400;
}

/* Hero time card */
.hero-card {
    background: linear-gradient(145deg, rgba(20,20,30,0.95) 0%, rgba(15,15,22,0.9) 100%);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius);
    padding: clamp(24px, 5vw, 40px);
    margin-bottom: clamp(24px, 4vw, 32px);
    box-shadow: var(--shadow), 0 0 0 1px rgba(255,255,255,0.03) inset;
    animation: fadeUp 0.6s ease-out 0.1s both;
}

.hero-card:hover {
    box-shadow: 0 30px 60px -15px rgba(0,0,0,0.5), 0 0 40px -10px var(--accent-glow);
}

@keyframes fadeUp {
    from {
        opacity: 0;
        transform: translateY(24px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.country-info {
    margin-bottom: 24px;
}

.flag-emoji {
    font-size: clamp(3rem, 10vw, 5rem);
    display: block;
    margin-bottom: 12px;
    line-height: 1;
}

@media (min-width: 769px) {
    .flag-emoji {
        display: none;
    }
}

.country-name {
    font-size: clamp(1.35rem, 3.5vw, 2rem);
    font-weight: 600;
    color: var(--text);
    letter-spacing: -0.01em;
}

.time-block {
    text-align: center;
}

.hero-card .time {
    font-size: clamp(2.5rem, 10vw, 4.5rem);
    font-weight: 700;
    font-variant-numeric: tabular-nums;
    letter-spacing: 0.02em;
    color: var(--accent);
    text-shadow: 0 0 40px var(--accent-glow);
    margin-bottom: 8px;
    transition: color var(--transition);
}

.hero-card .date {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--text-muted);
    margin-bottom: 16px;
}

.hero-card .meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px 24px;
    font-size: 0.9rem;
    color: var(--text-muted);
}

.hero-card .timezone {
    font-family: ui-monospace, monospace;
    padding: 6px 12px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-sm);
}

.hero-card .season {
    color: var(--accent);
    font-weight: 500;
}

/* Panel (tabs + content) */
.panel {
    background: linear-gradient(160deg, rgba(18,18,28,0.95) 0%, rgba(12,12,18,0.9) 100%);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius);
    padding: clamp(20px, 4vw, 28px);
    box-shadow: var(--shadow);
    animation: fadeUp 0.6s ease-out 0.2s both;
}

.tabs {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--bg-card-border);
}

.tab-btn {
    flex: 1;
    padding: 12px 20px;
    background: transparent;
    border: 1px solid transparent;
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    font-family: inherit;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: color var(--transition), background var(--transition), border-color var(--transition), transform 0.2s ease;
}

.tab-btn:hover {
    color: var(--text);
    background: rgba(255, 255, 255, 0.05);
}

.tab-btn.active {
    background: linear-gradient(135deg, var(--accent-dim) 0%, var(--purple-dim) 100%);
    color: var(--accent);
    border-color: rgba(0, 229, 176, 0.4);
    box-shadow: 0 0 20px -5px var(--accent-glow);
}

.tab-content {
    display: none;
    animation: fadeIn 0.4s ease-out;
}

.tab-content.active {
    display: block;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

/* Map */
.map-wrap {
    border-radius: var(--radius-sm);
    overflow: hidden;
    margin-top: 8px;
}

#map {
    height: clamp(280px, 45vw, 400px);
    width: 100%;
    border-radius: var(--radius-sm);
}

.map-hint {
    text-align: center;
    margin-top: 12px;
    font-size: 0.9rem;
    color: var(--text-muted);
}

/* Map offline fallback */
.map-offline {
    min-height: 320px;
    padding: 24px;
    background: linear-gradient(145deg, rgba(255,255,255,0.04) 0%, rgba(255,255,255,0.02) 100%);
    border: 1px dashed var(--bg-card-border);
    border-radius: var(--radius-sm);
    text-align: center;
}

.map-offline-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 8px;
}

.map-offline-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 20px;
}

.map-offline-list {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    max-height: 360px;
    overflow-y: auto;
}

.map-offline-country-btn {
    padding: 10px 16px;
    background: linear-gradient(135deg, var(--accent-dim) 0%, var(--purple-dim) 100%);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: var(--radius-sm);
    color: var(--text);
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.map-offline-country-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px var(--accent-glow);
}

/* List */
.search-input {
    width: 100%;
    padding: 14px 18px;
    margin-bottom: 16px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius-sm);
    color: var(--text);
    font-family: inherit;
    font-size: 1rem;
    transition: border-color var(--transition), box-shadow var(--transition);
}

.search-input::placeholder {
    color: var(--text-muted);
}

.search-input:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px var(--accent-dim);
}

.country-list {
    max-height: 420px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.country-list::-webkit-scrollbar {
    width: 8px;
}

.country-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 4px;
}

.country-list::-webkit-scrollbar-thumb {
    background: var(--text-muted);
    border-radius: 4px;
}

.country-item {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 14px 18px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid transparent;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: background var(--transition), border-color var(--transition), transform 0.2s ease;
}

.country-item:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(0, 212, 170, 0.2);
    transform: translateX(4px);
}

.country-item.selected {
    background: var(--accent-dim);
    border-color: rgba(0, 212, 170, 0.4);
}

.country-item-flag {
    font-size: 1.5rem;
    min-width: 28px;
    text-align: center;
}

@media (min-width: 769px) {
    .country-item-flag {
        display: none;
    }
}

.country-item-name {
    flex: 1;
    font-size: 1rem;
    font-weight: 500;
    color: var(--text);
}

.country-item-timezone {
    font-size: 0.8rem;
    font-family: ui-monospace, monospace;
    color: var(--text-muted);
}

/* Calendar */
.calendar-toolbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    margin-bottom: 16px;
}

.cal-nav {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius-sm);
    color: var(--text);
    font-size: 1.25rem;
    cursor: pointer;
    transition: background var(--transition), border-color var(--transition), transform 0.2s ease;
}

.cal-nav:hover {
    background: var(--accent-dim);
    border-color: rgba(0, 212, 170, 0.3);
    transform: scale(1.05);
}

.cal-title {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    font-weight: 600;
    color: var(--text);
}

.calendar-view-toggle {
    display: flex;
    gap: 8px;
    margin-bottom: 12px;
}

.calendar-view-toggle .view-toggle-btn {
    flex: 1;
    padding: 10px 16px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    font-family: inherit;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: background var(--transition), border-color var(--transition), color var(--transition);
}

.calendar-view-toggle .view-toggle-btn:hover {
    background: rgba(255, 255, 255, 0.06);
    color: var(--text);
}

.calendar-view-toggle .view-toggle-btn.active {
    background: linear-gradient(135deg, var(--accent-dim) 0%, var(--purple-dim) 100%);
    border-color: rgba(0, 229, 176, 0.4);
    color: var(--accent);
}

.cal-hint {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 16px;
}

.calendar {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 8px;
}

.calendar-day-header {
    text-align: center;
    padding: 10px 4px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.calendar-day {
    aspect-ratio: 1;
    min-height: 64px;
    padding: 8px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius-sm);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    transition: background var(--transition), border-color var(--transition), transform 0.2s ease;
}

.calendar-day:hover:not(.empty) {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(0, 212, 170, 0.2);
    transform: scale(1.02);
}

.calendar-day.empty {
    background: transparent;
    border-color: transparent;
    cursor: default;
}

.calendar-day.today {
    background: var(--accent-dim);
    border-color: var(--accent);
    box-shadow: 0 0 20px var(--accent-glow);
}

.calendar-day.today .day-number {
    color: var(--accent);
    font-weight: 700;
}

.calendar-day.has-events {
    border-color: rgba(168, 85, 247, 0.4);
    background: rgba(168, 85, 247, 0.06);
}

.day-number {
    font-size: clamp(0.85rem, 2vw, 1rem);
    font-weight: 500;
    color: var(--text);
}

.calendar-day-festivals {
    margin-top: 6px;
    font-size: 0.65rem;
    line-height: 1.3;
    color: var(--text-muted);
    text-align: center;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    word-break: break-word;
}

.calendar-day.today .calendar-day-festivals {
    color: var(--accent);
}

.calendar-day.has-events {
    cursor: pointer;
}

/* Mobile calendar alignment */
@media (max-width: 640px) {
    .calendar {
        grid-template-columns: repeat(7, minmax(0, 1fr));
        gap: 4px;
        padding: 4px;
    }
    .calendar-day-header {
        padding: 6px 2px;
        font-size: 0.65rem;
    }
    .calendar-day {
        min-height: 48px;
        aspect-ratio: 1;
        padding: 4px;
    }
    .day-number {
        font-size: 0.8rem;
    }
    .calendar-day-festivals {
        font-size: 0.55rem;
        -webkit-line-clamp: 2;
        margin-top: 2px;
    }
}

/* Festival modal (tap day to see names) */
.festival-modal {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
}

.festival-modal.festival-modal-visible {
    opacity: 1;
    visibility: visible;
}

.festival-modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(6px);
}

.festival-modal-box {
    position: relative;
    width: 100%;
    max-width: 400px;
    max-height: 80vh;
    background: linear-gradient(160deg, var(--bg-card) 0%, rgba(20, 20, 30, 0.98) 100%);
    border: 1px solid var(--bg-card-border);
    border-radius: var(--radius);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    transform: scale(0.9);
    transition: transform 0.3s ease;
}

.festival-modal-visible .festival-modal-box {
    transform: scale(1);
}

.festival-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    background: linear-gradient(90deg, var(--accent-dim) 0%, transparent 100%);
    border-bottom: 1px solid var(--bg-card-border);
}

.festival-modal-header h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text);
}

.festival-modal-close {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.08);
    border: none;
    border-radius: 50%;
    color: var(--text);
    font-size: 1.5rem;
    cursor: pointer;
    transition: background 0.2s ease;
}

.festival-modal-close:hover {
    background: var(--accent-dim);
}

.festival-modal-list {
    list-style: none;
    padding: 16px 20px;
    margin: 0;
    max-height: 60vh;
    overflow-y: auto;
}

.festival-modal-list li {
    padding: 12px 16px;
    margin-bottom: 8px;
    background: rgba(255,255,255,0.04);
    border-radius: var(--radius-sm);
    border-left: 3px solid var(--accent);
    color: var(--text);
    font-size: 0.95rem;
}

.festival-modal-list li:last-child {
    margin-bottom: 0;
}

/* Footer */
.footer {
    text-align: center;
    padding: clamp(24px, 4vw, 40px) 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
}

.footer p {
    font-size: 0.9rem;
    color: var(--text-muted);
}

.footer a {
    color: var(--accent);
    text-decoration: none;
    transition: color var(--transition);
}

.footer a:hover {
    color: var(--text);
}

.install-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background: var(--accent-dim);
    border: 1px solid rgba(0, 212, 170, 0.4);
    border-radius: var(--radius-sm);
    color: var(--accent);
    font-family: inherit;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: background var(--transition), transform 0.2s ease;
}

.install-btn:hover {
    background: linear-gradient(135deg, var(--accent-dim) 0%, var(--purple-dim) 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--accent-glow);
}

/* Offline banner */
.offline-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 12px 20px;
    background: var(--orange);
    color: var(--bg);
    font-size: 0.9rem;
    font-weight: 500;
    text-align: center;
    z-index: 1000;
    transform: translateY(100%);
    transition: transform var(--transition);
}

.offline-banner[aria-hidden="false"] {
    transform: translateY(0);
}

/* File protocol notice (open via file:// blocks API & manifest) */
.file-protocol-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 12px 20px;
    background: var(--orange);
    color: var(--bg);
    font-size: 0.9rem;
    font-weight: 500;
    text-align: center;
    z-index: 1001;
    transform: translateY(-100%);
    transition: transform var(--transition);
}

.file-protocol-banner[aria-hidden="false"] {
    transform: translateY(0);
}

.file-protocol-banner code {
    background: rgba(0, 0, 0, 0.2);
    padding: 2px 8px;
    border-radius: 6px;
    font-family: ui-monospace, monospace;
    font-size: 0.85em;
}

/* Responsive */
@media (max-width: 640px) {
    .tabs {
        flex-wrap: wrap;
    }

    .tab-btn {
        min-width: calc(33.33% - 6px);
    }

    .calendar-day {
        min-height: 56px;
        padding: 6px;
    }

    .calendar-day-festivals {
        font-size: 0.6rem;
        -webkit-line-clamp: 2;
    }
}
